<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
 	android:background="@color/floralwhite" >
 
 	<Button
 	    android:id="@+id/bt_auto_test"
 	    style="@style/titlStyle"
 	    android:layout_width="200.0dip"
 	    android:layout_height="wrap_content"
 	    android:layout_alignLeft="@+id/bt_manual_test"
 	    android:layout_alignParentTop="true"
 	    android:layout_marginTop="50.0dip"
 	    android:background="@drawable/selector_button"
 	    android:onClick="onClick"
 	    android:padding="20dp"
 	    android:text="@string/bt_auto_test" />
 	
 	
 	<Button
 	    style="@style/titlStyle"
 	    android:layout_width="200.0dip"
        android:layout_height="wrap_content" 
        android:layout_marginTop="50.0dip"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/bt_auto_test"
 	    android:id="@+id/bt_manual_test"
 	    android:onClick="onClick"
 	     android:padding="20dp"
 	    android:background="@drawable/selector_button"
 	    android:text="@string/bt_manual_test"/>
 	
 	
 	<Button
 	    style="@style/titlStyle"
 	    android:layout_width="200.0dip"
        android:layout_height="wrap_content" 
        android:layout_marginTop="50.0dip"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/bt_manual_test"
 	    android:id="@+id/bt_test_report"
 	    android:onClick="onClick"
 	     android:padding="20dp"
 	    android:background="@drawable/selector_button"
 	    android:text="@string/bt_test_report"/>


 	<Button
 	    android:id="@+id/bt_reboot"
 	    style="@style/titlStyle"
 	    android:layout_marginTop="50.0dip"
 	    android:layout_width="200.0dip"
 	    android:layout_height="wrap_content"
 	    android:layout_alignLeft="@+id/bt_test_report"
 	    android:layout_below="@+id/bt_test_report"
 	    android:background="@drawable/selector_button"
 	    android:onClick="onClick"
 	     android:padding="20dp"
 	    android:text="@string/bt_reboot" />
 	<!--  
 	<TextView 
 	    android:textSize="12.0sp"
        android:textColor="#ffff0000" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="@string/test_finish_reboot"
        android:layout_below="@+id/bt_reboot" 
        android:layout_centerHorizontal="true" />-->
 	
 </RelativeLayout>

